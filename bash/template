#!/bin/bash
set +e  #sets that the script should exit should a command not return 0
set +u  #sets that the script should fail if a variable isn't set when used
NORMAL=$(tput sgr0)
GREEN=$(tput setaf 2; tput bold)
YELLOW=$(tput setaf 3)
RED=$(tput setaf 1)

TRUE=1
FALSE=0
DEBUG=(TRUE)

function red() {
    echo -e "$RED$*$NORMAL"
}

function green() {
    echo -e "$GREEN$*$NORMAL"
}

function yellow() {
    echo -e "$YELLOW$*$NORMAL"
}

function debug() { ((DEBUG)) && echo ">>> $*"; }

# To print success
green "Task has been completed"

# To print error
red "The configuration file does not exist"

# To print warning
yellow "You have to use higher version."

debug "this is a test"
